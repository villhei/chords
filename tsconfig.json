{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "target": "es5",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "build",
    "sourceMap": true,
    "lib": ["dom", "es2017"],
    "baseUrl": "./src",
    "paths": {
      "~/*": ["demo/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
